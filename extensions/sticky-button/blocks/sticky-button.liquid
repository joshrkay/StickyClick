{% comment %}
  StickyClick â€” Sticky Add-to-Cart Button
  Placeholder block. Will be wired to app settings via app proxy.
{% endcomment %}

{% if product %}
<div
  id="stickyclick-bar"
  style="
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: {{ block.settings.primary_color }};
    color: {{ block.settings.text_color }};
    text-align: center;
    padding: 12px 20px;
    font-size: 16px;
    font-weight: 600;
    z-index: 999999;
    box-shadow: 0 -2px 8px rgba(0,0,0,0.15);
    cursor: pointer;
    display: none;
  "
>
  <span id="stickyclick-label">Add to Cart</span>
</div>

<script src="{{ 'stickyclick.js' | asset_url }}"></script>
{% endif %}

{% schema %}
{
  "name": "Sticky Add-to-Cart",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "primary_color",
      "label": "Button background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Button text color",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}
